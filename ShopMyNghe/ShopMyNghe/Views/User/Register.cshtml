@model ShopMyNghe.Models.User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

@using (Html.BeginForm("RegistrationProcessing", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="container mb-4 mt-2" style="width: 350px;">
        <h2 class="text-center" style="font-weight: bold; color: rgb(252, 150, 112);">Register</h2>
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label">User ID (USR00...)</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.user_id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label">Username</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label">Password</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label">Email</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label">Phone</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label">Address</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mt-2 text-center">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Create" class="btn" style="background-color: rgb(252, 150, 112);" />
                </div>
            </div>
        </div>
    </div>
}